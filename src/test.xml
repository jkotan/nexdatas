<?xml version='1.0' encoding='UTF-8'?>
<definition>
  <group name='instrument' type='NXinstrument'>
    <group name='source' type='NXsource'>
      <field units='m' name='distance' type='NX_FLOAT'>100.<datasource hostname='door.desy.de' port='12345' dbname='door_db' type='DB' strategy='STEP' query='SELECT proposal_name FROM proposals WHERE date = TODAY AND beamline = "P03"'/>
      </field>
      <field name='type' type='NX_CHAR'>Synchrotron X-ray Source</field>
      <field name='name' type='NX_CHAR'>PETRA-III<attribute name='short_name' type='NX_CHAR'>P3</attribute>
      </field>
      <field name='probe' type='NX_CHAR'>x-ray</field>
      <field units='W' name='power' type='NX_FLOAT'>1<datasource hostname='haso228k.desy.de' device='p09/motor/exp.01' port='10000' strategy='INIT' type='TANGO'><record name='power' type='attribute'/>
        </datasource>
      </field>
      <field units='nm rad' name='emittance_x' type='NX_FLOAT'>0.2<datasource hostname='haso228k.desy.de' port='10000' strategy='STEP'><record name='emitannce_x'/>
        </datasource>
      </field>
      <field units='nm rad' name='emittance_y' type='NX_FLOAT'>0.2<datasource hostname='haso228k.desy.de' door='door1' port='10000' strategy='STEP' type='SARDANA'><record name='emitannce_y'/>
        </datasource>
      </field>
      <field units='nm' name='sigma_x' type='NX_FLOAT'>0.1</field>
      <field units='nm' name='sigma_y' type='NX_FLOAT'>0.1</field>
      <field units='s-1 cm-2' name='flux' type='NX_FLOAT'>0.1</field>
      <field units='GeV' name='energy' type='NX_FLOAT'>0.1</field>
      <field units='A' name='current' type='NX_FLOAT'>10</field>
      <field units='V' name='voltage' type='NX_FLOAT'>10</field>
      <field units='microseconds' name='period' type='NX_FLOAT'>1</field>
      <field name='target_material' type='NX_CHAR'>C</field>
    </group>
  </group>
</definition>
